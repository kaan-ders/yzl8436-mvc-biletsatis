@{
}

@model Ticket

<h3> Bilet Sat </h3>

<div class="col-12 mt-2">
    <div class="card" style="width: 100%;">
        <img src="@ViewBag.MoviePoster" class="card-img-top" style="width:200px;">
        <div class="card-body">
            <h5 class="card-title">@ViewBag.MovieTitle</h5>
            <p>@ViewBag.MovieOverview</p>
        </div>
    </div>
</div>

@if (ViewBag.HataVarMi == true)
{
    <div class="alert alert-danger" role="alert">
        Salon kapasitesini aştınız
    </div>
}

<form class="mt-3" action="/Ticket/Sale" method="post">
    <div class="mb-3">
        <label class="form-label">Seans</label>
        <select class="form-control" asp-for="SessionId">
            @foreach (Session session in ViewBag.Sessions)
            {
                <option value="@session.Id">@session.Saloon.No / @session.DateTime</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Bilet adeti</label>
        <input type="number" class="form-control" asp-for="Amount">
    </div>
    <button type="submit" class="btn btn-primary">Satış yap</button>
</form>