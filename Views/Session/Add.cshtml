@{
}

@model Session

<h3>Seans Ekle</h3>

<form class="mt-3" action="/Session/Add" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3">
        <label class="form-label">Tarih</label>
        <input type="date" class="form-control" asp-for="DateTime">
    </div>
    <div class="mb-3">
        <label class="form-label">Bilet fiyatı</label>
        <input type="number" class="form-control" asp-for="UnitPrice">
    </div>
    <div class="mb-3">
        <label class="form-label">Film</label>
        <select class="form-control" asp-for="MovieId">
            @foreach (Movie movie in ViewBag.Movies)
            {
                <option value="@movie.Id">@movie.Title</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Salon</label>
        <select class="form-control" asp-for="SaloonId">
            @foreach (Saloon saloon in ViewBag.Saloons)
            {
                <option value="@saloon.Id">@saloon.No</option>
            }
            
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}